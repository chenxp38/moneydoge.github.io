<!--pages/receipt/receipt.wxml-->
<!--selectbar area-->
<view class='button-area'>
  <label class="{{isSelected1?'is_selected':'normal'}}" bindtap='select1'>快递</label>
  <label class="{{isSelected2?'is_selected':'normal'}}" bindtap='select2'>跑腿</label>
  <label class="{{isSelected3?'is_selected':'normal'}}" bindtap='select3'>求助</label>
  <label class="{{isSelected4?'is_selected':'normal'}}" bindtap='select4'>闲置</label>
  <label class="{{isSelected5?'is_selected':'normal'}}" bindtap='select5'>问卷</label>
</view>

<view class='button-area1'>
  <label class="{{isSelected6?'is_selected1':'normal1'}}" bindtap='select6'>我的发布</label>
  <label class="{{isSelected7?'is_selected1':'normal1'}}" bindtap='select7'>我的接单</label>
</view>

<view style='height:160rpx'></view>
<view class="wx-popup" hidden="{{flag}}" catchtouchmove="ture">
  <view class='popup-container'>
    <view class="wx-popup-con">订单删除后将不可恢复，是否删除订单？</view>
    <view class="wx-popup-btn">
      <text class="btn-no" bindtap='cancelDelete'>取消</text>
      <text class="btn-ok" bindtap='confirmDelete'>删除</text>
    </view>
  </view>
</view>

<view class='listArea'>
<view wx:if='{{isSelected1}}' class='expressageList'>
<block wx:for='{{isSelected6 == true ? publishExTradeList : receiptExTradeList}}' wx:key='exTradeList' wx:for-index='index'>
  <!-- 1.快递 data-*属性在触发事件时获取  -->
  <view class='singleTrade' hover-class='item-press' bindtap='showDetail' data-id='1' data-json='{{item}}' bindlongpress='deleteOrder' data-type='0' data-orderID='{{item.pid}}'>
    <view class='single-top'>
      <view class='a'>
        <view class='name'>{{item.loc}}</view>
        <view class='price'>￥{{item.pay}}</view>
      </view>
    </view>
    <view class='b'>
      <view class='left-container'>
        <view>快递点</view>
        <view>快递数量</view>
        <view>到达时间</view>
      </view>
      <view class='right-container'>
        <view>{{item.express_loc}}</view>
        <view>{{item.num}}</view>
        <view>{{item.arrive_time}}</view>
      </view>
    </view>
    <view class='single-bottom'>
      <label wx:if="{{isSelected6 && item.state!=2}}" class='order-state'>{{item.state==0 ? '未被接单' : '已被接单'}}</label>
      <label wx:if="{{isSelected6 && item.state==2}}" class='order-state1'>确认完成</label>
      <label wx:if="{{isSelected7}}" class='order-state1'>{{item.state==1 ? '已接单' : '已完成'}}</label>
      <button wx:if="{{isSelected6 && item.state!=2}}" class='accept-button' catchtap='confirmFinish' data-type='0' data-id='{{index}}' data-orderid='{{item.pid}}'>完成{{item.state}}</button>
    </view>
  </view>
</block>
<view wx:if="{{lastId1==-1}}" style='text-align:center;color:gray;'>没有更多了</view>
<view wx:else style='text-align:center;color:gray;'>上拉加载更多</view>
</view>
<view wx:if='{{isSelected2}}' class='errandList'>
<block wx:for='{{isSelected6 == true ? publishErTradeList : receiptErTradeList}}' wx:key='erTradeList'>
  <!-- 2.跑腿 data-*属性在触发事件时获取  -->
  <view class='singleTrade' hover-class='item-press' catchtap='showDetail' bindlongpress='deleteOrder' data-type='1' data-orderID='{{item.rid}}'>
    <view class='single-top'>
      <view class='a'>
        <view class='name'>{{item.title}}</view>
        <view class='price'>￥{{item.pay}}</view>
      </view>
    </view>
    <view class='b'>
      <view class='left-container'>
        <view>跑腿内容</view>
        <view>截止时间</view>
      </view>
      <view class='right-container'>
        <view>{{item.content}}</view>
        <view>{{item.ending_time}}</view>
      </view>
    </view>
    <view class='single-bottom'>
      <label wx:if="{{isSelected6 && !isFinish}}" class='order-state'>{{item.state==0 ? '未被接单' : '已被接单'}}</label>
      <label wx:if="{{isSelected6 && isFinish}}" class='order-state1'>确认完成</label>
      <label wx:if="{{isSelected7}}" class='order-state1'>{{item.state==1 ? '已接单' : '已完成'}}</label>
      <button wx:if="{{isSelected6 && !isFinish}}" class='accept-button' catchtap='confirmFinish' data-type='1' data-id='{{index}}' data-orderID='{{item.rid}}'>完成</button>
    </view>
  </view>
</block>
<view wx:if="{{lastId2==-1}}" style='text-align:center;color:gray;'>没有更多了</view>
<view wx:else style='text-align:center;color:gray;'>上拉加载更多</view>
</view>
<view wx:if='{{isSelected3}}' class='seekhelpList'>
<!--由于seekhelp和secondhand开头相同，为了避免混淆，下面用he代表求助，se代表闲置-->
<block wx:for='{{isSelected6 == true ? publishHeTradeList : receiptHeTradeList}}' wx:key='heTradeList'>
  <!-- 3.求助 data-*属性在触发事件时获取  -->
  <view class='singleTrade' hover-class='item-press' catchtap='showDetail'  bindlongpress='deleteOrder' data-type='2' data-orderID='{{item.fid}}'>
    <view class='single-top'>
      <view class='a'>
        <view class='name'>{{item.title}}</view>
        <view class='price'>￥{{item.pay}}</view>
      </view>
    </view>
    <view class='b'>
      <view class='left-container'>
        <view>求助内容</view>
        <view>截止时间</view>
      </view>
      <view class='right-container'>
        <view>{{item.content}}</view>
        <view>{{item.ending_time}}</view>
      </view>
    </view>
    <view class='single-bottom'>
      <label wx:if="{{isSelected6 && !isFinish}}" class='order-state'>{{item.state==0 ? '未被接单' : '已被接单'}}</label>
      <label wx:if="{{isSelected6 && isFinish}}" class='order-state1'>确认完成</label>
      <label wx:if="{{isSelected7}}" class='order-state1'>{{item.state==1 ? '已接单' : '已完成'}}</label>
      <button wx:if="{{isSelected6 && !isFinish}}" class='accept-button' catchtap='confirmFinish' data-type='2' data-id='{{index}}' data-orderID='{{item.fid}}'>完成</button>
    </view>
  </view>
</block>
<view wx:if="{{lastId3==-1}}" style='text-align:center;color:gray;'>没有更多了</view>
<view wx:else style='text-align:center;color:gray;'>上拉加载更多</view>
</view>
<view wx:if='{{isSelected4}}' class='secondhandList'>
<block wx:for='{{isSelected6 == true ? publishSeTradeList : receiptSeTradeList}}' wx:key='seTradeList'>
  <!-- 4.闲置 data-*属性在触发事件时获取  -->
  <view class='singleTrade' hover-class='item-press' catchtap='showDetail'  bindlongpress='deleteOrder' data-type='3' data-orderID='{{item.sid}}'>
    <view class='single-top'>
      <view class='a'>
        <view class='name'>{{item.object_name}}</view>
        <view class='price'>￥{{item.pay}}</view>
      </view>
    </view>
    <image class='secondhand_image' src="../../../images/闲置.jpg"></image>
    <view class='b'>
      <view class='left-container'>
        <view>备注</view>
        <view>截止时间</view>
      </view>
      <view class='right-container'>
        <view>{{item.content}}</view>
        <view>{{item.ending_time}}</view>
      </view>
    </view>
    <view class='single-bottom'>
      <label wx:if="{{isSelected6 && !isFinish}}" class='order-state'>{{item.state==0 ? '未被接单' : '已被接单'}}</label>
      <label wx:if="{{isSelected6 && isFinish}}" class='order-state1'>确认完成</label>
      <label wx:if="{{isSelected7}}" class='order-state1'>{{item.state==1 ? '已接单' : '已完成'}}</label>
      <button wx:if="{{isSelected6 && !isFinish}}" class='accept-button' catchtap='confirmFinish' data-type='3' data-id='{{index}}' data-orderID='{{item.sid}}'>完成</button>
    </view>
  </view>
</block>
<view wx:if="{{lastId4==-1}}" style='text-align:center;color:gray;'>没有更多了</view>
<view wx:else style='text-align:center;color:gray;'>上拉加载更多</view>
</view>
<view wx:if='{{isSelected5}}' class='questionnaireList'>
<block wx:for='{{quTradeList}}' wx:key='quTradeList'>
  <!-- 5.问卷 问卷的id待定，先用qid代替-->
  <view class='singleTrade' hover-class='item-press' catchtap='showDetail'  bindlongpress='deleteOrder' data-id='5' data-json='{{item}}'>
    <text>问卷标题：{{item.title}}</text>
    <text>备注内容：{{item.content}}</text>
    <text>截止时间：{{item.ending_time}}</text>
    <text>价格：    {{item.pay}}</text>
    <button>接单</button>
  </view>
</block>
<view wx:if="{{lastId5==-1}}" style='text-align:center;color:gray;'>没有更多了</view>
<view wx:else style='text-align:center;color:gray;'>上拉加载更多</view>
</view>
</view>