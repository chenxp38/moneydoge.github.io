.singleTrade {
  font-family: PingFangSC-regular;
  font-weight: bolder;
  margin: 3px;
  background-color: white;
  border: 1px solid rgb(187,187,187);
  width: 97.5%;
  border-radius: 10rpx;
}

.b {
  padding: 9px 9px 0 9px;
  display: flex;
  justify-content: flex-start;
  line-height:1.5;
}

.b .left-container {
  flex: 1;
}

.b .right-container {
  /*小程序的overflow:hidden;要固定长度*/
  width: 230px;
  flex: 2;
  white-space: nowrap;
  overflow: hidden;
}

.a {
  padding: 15px 9px 9px 9px;
  border-bottom: 1px solid #BBBBBB;
  display: flex;
  justify-content: flex-start;
}
.a .name{
  flex:6;
  font-size: 20px;
}
.a .price{
  flex: 1;
  color: red;
}

.goods_img {
  width: 250rpx;
  height: 250rpx;
  margin: 10rpx;
}

/* component/popup.wxss */
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 11;
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  z-index: 12;
}

.wx-popup-con {
  margin: 40rpx 20rpx;
  text-align: center;
  font-size: 30rpx;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
}
.btn-no {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 88rpx;
  border-width: 2rpx 2rpx 0rpx 0rpx;
  border-style: solid;
  border-color: #ccc;
  font: 35rpx;
}
.btn-ok {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 88rpx;
  border-width: 2rpx 0rpx 0rpx 0rpx;
  border-style: solid;
  border-color: #ccc;
  font-size: 35rpx;
  color: #87CEFA;
}
.secondhand_image {
   width: 250rpx; 
   height: 250rpx;
   margin-left: 20rpx;
   margin-top: 10rpx;
}
