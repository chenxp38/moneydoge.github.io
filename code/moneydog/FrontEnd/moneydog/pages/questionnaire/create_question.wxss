/* pages/questionnaire/create_question.wxss */

.choice-question {
  background: white;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 100rpx;
}

.choice-question view {
  width: 90%;
  padding: 0rpx 5% 0rpx 5%;
  margin-bottom: 40rpx;
}

.choice-question view input {
  border: 2rpx solid gainsboro;
  border-radius: 5rpx;
  margin: 10rpx;
  padding: 10rpx;
}

.choice-question button {
  width: 80%;
}

.container{
  padding: 0px;
}