/* pages/questionnaire/questionnaire.wxss */

.ques-tab {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  width: 100%;
  background-color: white;
  border: 2rpx solid gainsboro;
  padding: 5rpx;
  z-index: 99;
}

.ques-tab view {
  width: 50%;
  text-align: center;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
}

.ques-tab view label {
  font-size: 25rpx;
  color: gray;
}

.question-area-bottom {
  height: 100rpx;
  width: 100%;
  background-color: white;
}

.item-images {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
}

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4); /*设置阴影半透明背景*/
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 350rpx;
  left: 100rpx;
  width: 400rpx;/*弹窗布局宽*/
  height: 400rpx;/*弹窗布局高，与下面弹出距离transform有关*/
  background: #fff;
  transform: translateY(300%);/*弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度*/
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;/*弹框的悬浮阴影效果，如不需要可注释该行*/
  padding: 80rpx;
}

.zan-dialog__container button {
  width: 400rpx;
  height: 100rpx;
  margin-bottom: 60rpx;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.choice-question {
  background: white;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 100rpx;
}

.choice-question view {
  width: 90%;
  padding: 0rpx 5% 0rpx 5%;
  margin-bottom: 40rpx;
}

.choice-question view input {
  border: 2rpx solid gainsboro;
  border-radius: 5rpx;
  margin: 10rpx;
  padding: 10rpx;
}

.choice-question button {
  width: 80%;
}

.container{
  padding: 0px;
}

#question-area {
  background-color: white;
  width: 100%;
}

.question-view {
  width: 100%;
  padding: 10rpx 5% 10rpx 5%;
  margin-bottom: 10rpx;
  background-color: white;
}

.radio-group{
  width: 90%;
  display: flex;
  justify-content: center; 
  align-items: center;
  flex-direction: column;
  margin: 20rpx 0rpx 20rpx 0rpx;
  border: 2rpx solid gainsboro;
  border-radius: 10rpx;
}

.radio-group radio {
  padding: 20rpx;
  width: 95%;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-style: solid;
  border-color: gainsboro;
}

 .checkbox-group {
  width: 90%;
  display: flex;
  justify-content: center; 
  align-items: center;
  flex-direction: column;
  margin: 20rpx 0rpx 20rpx 0rpx;
  border: 2rpx solid gainsboro;
  border-radius: 10rpx;
}

.checkbox-group checkbox {
  padding: 20rpx;
  width: 95%;
  border-width: 0rpx 0rpx 1rpx 0rpx;
  border-style: solid;
  border-color: gainsboro;
}

.question-view input {
  width: 90%;
  height: 150rpx;
  border: 2rpx solid gainsboro;
  margin: 20rpx 0rpx 20rpx 0rpx;
  border-radius: 10rpx;
}

.questionnaire-title {
  width: 90%;
  color: #87CEFA;
  font-size: 70rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
  margin: 0rpx;
}

.questionnaire-describe {
  width: 90%;
  display: flex;
  justify-content: center; 
  align-items: left;
  margin: 20rpx 0rpx 20rpx 0rpx;
}