/* pages/receipt/receipt.wxss */
.button-area {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: absolute;
  top: 0px;
}
.is_selected {
  width: 20%;
  border-radius: 0px;
  text-align: center;
  background-color: #87CEFA;
  padding: 15rpx;
}
.normal {
  width: 20%;
  border-radius: 0px;
  text-align: center;
  padding: 15rpx;
}

#wrapper {
  display: flex;
  margin-top: 40px;
  justify-content: flex-end;
}
.select_box{
  width: 200px;
  height: 30px;
  border: solid;
  border-width: 1px;
  border-color: rgb(187,187,187);
  border-radius: 14rpx;
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_box .select .select_text{
  font-size: 14px;
  color: #101010;
  line-height: 20px;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
}
.select_box .option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.singleTrade {
  font-family: PingFangSC-regular;
  font-weight: bolder;
  margin: 3px;
  background-color: white;
  border: 1px solid rgb(187,187,187);
  width: 97.5%;
  border-radius: 10rpx;
}

.b {
  padding: 9px 9px 0 9px;
  display: flex;
  justify-content: flex-start;
  line-height:1.5;
}

.b .left-container {
  flex: 1;
}

.b .right-container {
  /*小程序的overflow:hidden;要固定长度*/
  width: 230px;
  flex: 2;
  white-space: nowrap;
  overflow: hidden;
}

.a {
  padding: 15px 9px 9px 9px;
  border-bottom: 1px solid #BBBBBB;
  display: flex;
  justify-content: flex-start;
}
.a .name{
  flex:6;
  font-size: 20px;
}
.a .price{
  flex: 1;
  color: red;
}
.single-bottom {
  display: flex;
  justify-content: flex-end;
}
.accept-button {
  display: inline-block;
  margin: 0;
  width: 80px;
  height: 27px;
  line-height: 2;
  background-color: #F27A7A;
  border-radius: 4px;
  font-size: 14px;
}

.goods_img {
  width: 250rpx;
  height: 250rpx;
  margin: 10rpx;
}